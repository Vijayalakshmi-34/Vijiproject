@model OnlineDoctorsAppointmentBooking.ViewModels.ViewModel_Login
@{
    //ViewBag.Title = "EmployeeLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Employee Login</h2>
<center>
    <img src="~/Images/Home/employee.png" style="height:250px;width:200px" />
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(e => e.UserId)
                @Html.TextBoxFor(e => e.UserId, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(e => e.UserId)
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.Password)
                @Html.PasswordFor(e => e.Password, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(e => e.Password)
            </div>
            <div>
                <label class="field-validation-error">
                    @Html.DisplayFor(e => e.LoginErrorMessage)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" id="CmdSubmit" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
